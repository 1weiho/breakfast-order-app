<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterPageActivity">

    <com.fcu.breakfast_order_app.Nav
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.fcu.breakfast_order_app.Nav>

    <com.fcu.breakfast_order_app.Head
        android:id="@+id/headTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav" />

    <com.fcu.breakfast_order_app.BackButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headTitle" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="568dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="473dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:hint="舊密碼"
                android:inputType="textPassword"
                android:letterSpacing="0.3"
                android:paddingVertical="10dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:hint="新密碼"
                android:inputType="textPassword"
                android:letterSpacing="0.3"
                android:paddingVertical="10dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPasswordConfirm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:hint="新密碼確認"
                android:inputType="textPassword"
                android:letterSpacing="0.3"
                android:paddingVertical="10dp"
                android:paddingStart="16dp"
                android:textColor="@color/dark2"
                android:textSize="14sp" />


            <Button
                android:id="@+id/submitButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/primary"
                android:letterSpacing="1"
                android:text="變更"
                android:textSize="22sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>